<% include includes/header %>
    <h1 class="title">
                            Messages
    </h1>
    <div class="row">
        <div class="col-md-12">
			<div class="well messageWindow">
				<div class="message left">
				    <div class="well bubble">
				    	<h3>You</h3>
					    <p>
					    What is your favorite food?
              <source src="/uploads/1_2_1384371017309_recording.mp3" type="audio/mpeg">
					    </p>
				    </div>
				</div>
				<div class="message right">
				    <div class="well bubble">
				    	<h3>Participant</h3>
					    <p>
					    Pizza!
					    </p>
				    </div>
				</div>
        <% if (messages.length <= 0){ %>
          <p>No messages</p>
        <% } %>
        <% for(var i=0; i<messages.length; i++) {%>
            <div class="message right">
              <div class="well bubble">
                <h3>Participant</h3>
                <p><a href="<%= messages[i].path %>"><img src="/public/assets/custom/img/mp3.png" /></a></p>
              </div>
            </div>
        <% } %>
        <div id="autoMessageArea">
        </div>
				<form id="sendMessage">
					<textarea name="message" style="width:85%"></textarea>
					<a id="send" class="btn btn-primary" style="width:10%;">Send</a>
				</form>
		    </div>

        </div>
    </div>

  <script src="/public/assets/custom/js/message.js" type="text/javascript"></script>
  <% include includes/footer %>
  <script>
      $("#send").click(function() {
         alert("hit");
         return false;
    });
  </script>
